        "lerna": "^4.0.0",
        "yaml": "^2.0.1"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "concurrently": "^7.0.0",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
